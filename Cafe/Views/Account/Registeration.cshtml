@model RegisterViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<main class="auth">
    <h1>Регистрация</h1>
    <form asp-controller="Account" asp-action="Registeration" method="post" name="signup_frm">
        <div class="form-group row justify-content-center pt-3">
            <label for="email"></label>
            <input asp-for="Email" class="form-control col-8 col-sm-4" placeholder="Введите ваш email">
        </div>
        <div class="form-group row justify-content-center pt-3">
            <label for="password"></label>
            <input asp-for="Password" class="form-control col-8 col-sm-4 justify-content-center" placeholder="Введите ваш пароль" >
        </div>
        <div class="form-group row justify-content-center pt-3">
            <label for="PasswordConfirm"></label>
            <input asp-for="PasswordConfirm" class="form-control col-8 col-sm-4 justify-content-center" placeholder="Повторите пароль">
        </div>
        <div class="form-group row justify-content-center pt-3">
            <label for="Name"></label>
            <input asp-for="Name" class="form-control col-8 col-sm-4 justify-content-center" placeholder="Введите имя">
        </div>
        <button type="submit" class="btn btn-dark">Submit</button>
        <div asp-validation-summary="All" class="text-danger"></div>
    </form>
</main>